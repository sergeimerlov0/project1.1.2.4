<html>
<body>
    <div>
        <form method="post">
            <input type="text" name="text" placeholder="Введите сообщение" />
            <input type="text" name="tag" placeholder="Таг" />
            <input type="submit" >Отправить </input>
        </form>
    </div>
    <div>Список сообщений</div>
    {{#messages}}
      <div>
        <b>{{id}}</b>
        <span>{{text}}</span>
        <i>{{tag}}</i>
      </div>
    {{/messages}}
</body>
</html>